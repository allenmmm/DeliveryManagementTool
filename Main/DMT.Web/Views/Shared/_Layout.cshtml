<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.friendlyAction - Delivery Management Tool</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/moment")

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400" rel="stylesheet">
</head>
<body>
    <header>
        <a class="header-logo" href="@Url.Action("Index", "GenerateOrderbooks")">
            <img class="logo" src="~/Content/Images/Delivery Management Tool_White.png" />
        </a>
        <nav class="header-nav">
            <ul>
                <li><a href="#">Order Books</a></li>
            </ul>
        </nav>
        <div class="header-accent"></div>
    </header>

    <main>
        @RenderBody()
    </main>

    @RenderSection("scripts", required: false)
</body>
</html>